modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"
packages = ["chromium"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install express cors uuid puppeteer-extra puppeteer-extra-plugin-stealth puppeteer && node server.js"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
